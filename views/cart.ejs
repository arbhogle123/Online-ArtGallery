    var validateForm = function()
    {
        var imgname = document.Pform.imgname.value;
        var address = document.Pform.addr.value;
        if(imgname.length === 0)
        {
            alert("Enter the image Name");
            return false ;
        }
        else if(address.length === 0)
        {
            alert("Enter your address");
            return false;
        }
        else {
            return true ;
